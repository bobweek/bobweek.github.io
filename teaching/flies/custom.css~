  text-transform: uppercase;
  margin-bottom: 0.5em;
}

/* Body text (smaller) */
.reveal p, .reveal li {
  font-size: 24px;                     /* was 30px */
  line-height: 1.25;
}

/* Links */
.reveal a {
  color: var(--cyan);
  text-decoration: underline;
}

/* Lists */
.reveal ul {
  margin-top: 0.4em;
}
.reveal li::marker {
  color: var(--pink);
}

/* Block quotes */
.reveal blockquote {
  border-left: 10px solid var(--pink);
  padding: 16px 20px;
  background: rgba(255, 43, 214, 0.14);
  color: var(--text);
  font-style: normal;
}

/* Emphasis */
.reveal strong {
  color: var(--lime);
}

/* Images and video */
.reveal img, .reveal video, .reveal iframe {
  border: 8px solid rgba(0, 240, 255, 0.60);  /* cyan frame */
  border-radius: 14px;
}

