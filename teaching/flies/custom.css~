/* --------- Neon palette --------- */
:root {
  --bg: #07070a;       /* cool near-black */
  --panel: #0e0e14;    /* cool dark panel */
  --text: #f6f6ff;

  --lime: #b7ff00;     /* neon lime */
  --pink: #ff2bd6;     /* neon pink */
  --cyan: #00f0ff;     /* neon cyan */
  --gray: #a0a0a0;
}

/* Make borders/padding count inside slide size */
.reveal, .reveal * {
  box-sizing: border-box;
}

/* --------- Global typography/layout --------- */
.reveal {
  background: var(--bg);
  color: var(--text);
  font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;

  /* Global sizing lever: tweak 26–30 */
  font-size: 28px;
}

.reveal .slides {
  text-align: left;
}

/* Slide “frame” (reduced so it fits) */
.reveal section {
  background: var(--panel);
